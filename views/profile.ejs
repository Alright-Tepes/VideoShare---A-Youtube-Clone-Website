<%- include('partials/header') %>

    <div class="container" style="max-width: 600px; margin-top: 2rem;">
        <div class="auth-form" style="max-width: 100%;">
            <h2>Profil Ayarları</h2>

            <% if (success) { %>
                <div
                    style="background: #d4edda; color: #155724; padding: 0.5rem; margin-bottom: 1rem; border-radius: 4px;">
                    <%= success %>
                </div>
                <% } %>
                    <% if (error) { %>
                        <div
                            style="background: #ffebeb; color: #ff0000; padding: 0.5rem; margin-bottom: 1rem; border-radius: 4px;">
                            <%= error %>
                        </div>
                        <% } %>

                            <div style="text-align: center; margin-bottom: 2rem;">
                                <img src="<%= user.avatarUrl %>" alt="Avatar" class="avatar"
                                    style="width: 100px; height: 100px; margin-bottom: 1rem;">
                                <h3>
                                    <%= user.username %>
                                </h3>
                            </div>

                            <form action="/profile" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="username">Kullanıcı Adı</label>
                                    <input type="text" id="username" name="username" value="<%= user.username %>"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label for="email">E-posta</label>
                                    <input type="email" id="email" name="email" value="<%= user.email %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="avatar">Profil Resmi</label>
                                    <input type="file" id="avatar" name="avatar" accept="image/*">
                                    <p style="font-size: 0.8rem; color: #666; margin-top: 0.25rem;">Ya da mevcut olanı
                                        koru: <%= user.avatarUrl %>
                                    </p>
                                </div>

                                <div class="form-group">
                                    <label for="coverUrl">Kapak Fotoğrafı URL</label>
                                    <input type="text" id="coverUrl" name="coverUrl" value="<%= user.coverUrl || '' %>"
                                        placeholder="https://...">
                                </div>
                                <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                            </form>
        </div>
    </div>

    <%- include('partials/footer') %>